{
	"name": "jira-lite-server",
	"version": "1.0.0",
	"description": "Server-side for the Lite Jira Task Manager",
	"main": "src/index.ts",
	"scripts": {
		"build": "rimraf dist && tsc -p tsconfig.json && tsc-alias",
		"start": "nodemon --watch src --exec ts-node ./src/index.ts",
		"test": "NODE_ENV=test jest --watchAll",
		"test:coverage": "NODE_ENV=test COVERAGE=true jest --watchAll",
		"migrate": "sequelize db:migrate",
		"migrate:rollback": "sequelize db:migrate:undo",
		"migrate:rollback:all": "sequelize db:migrate:undo:all",
		"seed": "sequelize db:seed:all",
		"seed:rollback": "sequelize db:seed:undo",
		"seed:rollback:all": "sequelize db:seed:all"
	},
	"author": "Morgan Polak",
	"dependencies": {
		"@types/express": "^4.17.17",
		"@types/sequelize": "^4.28.15",
		"bcrypt": "^6.0.0",
		"express": "^4.18.2",
		"moment": "^2.29.4",
		"mysql2": "^3.2.4",
		"sequelize": "^6.31.1",
		"sequelize-typescript": "^2.1.5"
	},
	"devDependencies": {
		"@babel/core": "^7.21.8",
		"@babel/preset-env": "^7.21.5",
		"@babel/preset-typescript": "^7.21.5",
		"@types/bcrypt": "^5.0.0",
		"@types/cors": "^2.8.19",
		"@types/glob": "^9.0.0",
		"@types/jest": "^29.5.1",
		"@types/lodash.shuffle": "^4.2.7",
		"@types/node": "^18.16.4",
		"@types/sqlite3": "^5.1.0",
		"@types/uuid": "^9.0.1",
		"@types/validator": "^13.7.15",
		"babel-jest": "^29.5.0",
		"cors": "^2.8.5",
		"jest": "^29.5.0",
		"nodemon": "^2.0.22",
		"sequelize-cli": "^6.6.0",
		"sqlite3": "^5.1.6",
		"ts-jest": "^29.2.5",
		"ts-node": "^10.9.1",
		"tsc-alias": "^1.8.10",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.6.2"
	}
}
